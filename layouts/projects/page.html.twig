{% extends '_default/page.html.twig' %}
           {%- block stylesheet ~%}
               <link rel="stylesheet"
                     href="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/tocbot/' ~ site.tocbot.version ~ '/tocbot.css', {minify: false}) }}">
               {% if page.highlight is defined %}
                   <link
                           rel="stylesheet"
                           href="{{ asset('highlightjs/highlight.css') }}"
                   />
                   <link
                           rel="stylesheet"
                           href="{{ asset('highlightjs/highlightjs-copy.min.css') }}"
                   />
               {% endif %}
           {%- endblock ~%}

            {%- block content ~%}
                <div class="intro w-full relative bg-cover overflow-hidden flex items-center">
                    <div class="cloud-1 w-[160vw] h-[150vh] bg-secondary rounded-full absolute -top-[100vh] -right-[100vw] blur-3xl opacity-50"></div>
                    <div class="cloud-1 w-[140vw] h-[140vh] bg-secondary rounded-full absolute -left-[85vw] -bottom-[80vh] blur-3xl opacity-50"></div>
                    <div class="container container-md mx-auto pt-24 md:pt-48 pb-10 md:pb-28 px-6">
                        <div class="flex flex-col md:flex-row gap-10 md:gap-16 items-center">
                            <div class="md:basis-1/2 flex flex-col justify-center md:justify-start gap-0 md:gap-6 content">
                                <h1>{{ page.title|e }}</h1>
                                <p class="content">{{ page.content|excerpt_html() }}</p>
                                <div>
                                    <a href="{{ page.repository }}" target="_blank"
                                       class="text-white bg-color font-bold py-2 px-4 rounded-md transition-all hover:no-underline hover:bg-colorHover">View
                                        Github Project</a>
                                </div>
                            </div>
                            <div class="md:basis-1/2">
                                {% if page.image is defined %}{{ asset(page.image)|resize(600)|html({alt: page.title}, {responsive: true}) }}{% else %}{{ asset('pages/welcome.jpg')|resize(600)|html({alt: page.title}, {responsive: true}) }}{% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                {% if page.content|excerpt_html({capture : 'after'}) %}
                    <div
                            class="container container-md mx-auto py-10 md:py-28 px-6 grid grid-flow-col grid-cols-auto xl:grid-cols-topbar max-w-content"
                            id="content">
                        <div class="content min-w-0 w-full md:pr-10 ">
                            {{ page.content|excerpt_html({capture : 'after'}) }}
                        </div>
                        {%~ include 'partials/toc.html.twig' ~%}
                    </div>
                {% endif %}
            {%- endblock content ~%}
    {%- block javascript ~%}
    {%~ include 'partials/tocjs.html.twig' ~%}
    {% if page.highlight is defined %}
    <script src="{{ asset('highlightjs/highlight.min.js') }}"></script>
    <script src="{{ asset('highlightjs/highlightjs-copy.min.js') }}"></script>
    <script >
    hljs.addPlugin(
        new CopyButtonPlugin({
          hook: (text, el) => {

            return text;
          },

        })
      );
      hljs.highlightAll();
</script>
    {% endif %}
    {%- endblock ~%}